<h2 id="title">ember-slide-crop</h2>

<div class="grid">
  <div class="crop-col">
    {{slide-cropper
        cropWidth=400
        cropHeight=300
        zoom=200
        image="images/sample.jpg"
        onLoad="updateCropAttrs"
        onUpdate="updateCropAttrs"}}
  </div>

  <div class="preview-col">
    <div class="preview">
      <div class="preview--crop" style={{previewStyles}}></div>
      <img src="images/sample.jpg" alt="Crop Preview">
    </div>
  </div>
</div>
